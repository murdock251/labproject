            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="100.0" text="Username" />
      <TextField fx:id="usernameField" layoutX="50.0" layoutY="130.0" prefWidth="300.0" />
      <Label layoutX="50.0" layoutY="180.0" text="Email" />
      <TextField fx:id="emailField" layoutX="50.0" layoutY="210.0" prefWidth="300.0" />
      <Label layoutX="50.0" layoutY="260.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="290.0" prefWidth="300.0" />
