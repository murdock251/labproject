<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ver1.controllers.RegisterController">
   <children>
      <Label layoutX="100.0" layoutY="30.0" text="Create Account">
