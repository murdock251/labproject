<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ver1.controllers.LoginController">
   <children>
      <Label layoutX="80.0" layoutY="50.0" prefHeight="35.0" prefWidth="250.0" text="Welcome to PostHub">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="150.0" prefHeight="17.0" prefWidth="300.0" text="Username" />
      <Label layoutX="50.0" layoutY="230.0" text="Password" />
      <TextField fx:id="usernameField" layoutX="50.0" layoutY="180.0" prefHeight="25.0" prefWidth="300.0" />
      <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="260.0" prefHeight="25.0" prefWidth="300.0" />
      <Button fx:id="loginButton" layoutX="50.0" layoutY="305.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="300.0" text="Login" />
      <Button fx:id="registerButton" layoutX="50.0" layoutY="370.0" mnemonicParsing="false" onAction="#handleGoToRegister" prefWidth="300.0" text="Don't have an account? Register" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="50.0" layoutY="430.0" prefWidth="300.0" textAlignment="JUSTIFY" textFill="RED" visible="false" />
   </children>
</AnchorPane>
