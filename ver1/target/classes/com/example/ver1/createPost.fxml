<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ver1.controllers.CreatePostController">
    <children>
        <Label layoutX="150.0" layoutY="20.0" prefHeight="17.0" prefWidth="169.0" text="Create New Post">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Content:">
            <font>
                <Font size="15.0" />
            </font>
        </Label>

        <TextArea fx:id="contentArea" layoutX="30.0" layoutY="100.0" prefHeight="150.0" prefWidth="440.0" wrapText="true" />

        <Label fx:id="charCountLabel" layoutX="30.0" layoutY="260.0" prefHeight="17.0" prefWidth="100.0" text="0 characters" />

        <!-- FIXED: This is textPostRadio, not statusPostRadio -->
        <RadioButton fx:id="textPostRadio" layoutX="30.0" layoutY="290.0" mnemonicParsing="false" selected="true" text="Text Post">
            <toggleGroup>
                <ToggleGroup fx:id="postType" />
            </toggleGroup>
        </RadioButton>

        <!-- ADDED: This is the missing statusPostRadio -->
        <RadioButton fx:id="statusPostRadio" layoutX="150.0" layoutY="290.0" mnemonicParsing="false" text="Status Post" toggleGroup="$postType" />

        <Label fx:id="moodLabel" layoutX="280.0" layoutY="290.0" text="Mood:" visible="false" />

        <ComboBox fx:id="moodComboBox" layoutX="330.0" layoutY="285.0" prefWidth="140.0" visible="false" />

        <Button fx:id="postButton" layoutX="30.0" layoutY="340.0" mnemonicParsing="false" onAction="#handlePost" prefHeight="40.0" prefWidth="200.0" text="Post" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button fx:id="cancelButton" layoutX="270.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="200.0" text="Cancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" />

    </children>
</AnchorPane>