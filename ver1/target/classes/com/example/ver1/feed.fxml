<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ver1.controllers.FeedController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Actions">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleCreatePost" text="Create Post" />
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="welcomeLabel" text="Welcome!">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <ListView fx:id="postListView" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="viewDetailsButton" mnemonicParsing="false" onAction="#handleViewDetails" prefWidth="150.0" text="View Details" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>