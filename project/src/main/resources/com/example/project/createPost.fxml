<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" styleClass="createPost-bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controllers.CreatePostController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <children>
        <!-- Title -->
        <Label text="Create Post">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Content Label -->
        <Label styleClass="input-label" text="What's on your mind?">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

        <!-- Content TextArea -->
        <TextArea fx:id="contentArea" prefHeight="250.0" promptText="Share your thoughts..." styleClass="content-textarea" wrapText="true" VBox.vgrow="ALWAYS" />

        <!-- Character Count -->
        <Label fx:id="charCountLabel" alignment="CENTER_RIGHT" maxWidth="Infinity" styleClass="char-count" text="0 / 500 characters" />
          <Button fx:id="postButton" mnemonicParsing="false" onAction="#handlePost" prefHeight="45.0" prefWidth="250.0" styleClass="btn-primary" text="Post">
              <font>
                  <Font name="System Bold" size="15.0" />
              </font>
          </Button>

          <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="50.0" prefWidth="250.0" styleClass="btn-cancel" text="Cancel">
              <font>
                  <Font name="System Bold" size="15.0" />
              </font>
          </Button>
    </children>
</VBox>
