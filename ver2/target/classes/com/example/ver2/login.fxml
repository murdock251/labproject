<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="550.0" styleClass="login-bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <!-- Title -->
        <Label layoutX="180.0" layoutY="150.0" styleClass="title-label" text="Welcome back">
            <font>
                <Font size="26.0" />
            </font>
        </Label>

        <!-- Username -->
        <Label layoutX="125.0" layoutY="227.0" text="Email">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="emailField" layoutX="125.0" layoutY="260.0" prefHeight="45.0" prefWidth="300.0" promptText="Enter your email" styleClass="input-field" />

        <!-- Password -->
        <Label layoutX="125.0" layoutY="320.0" text="Password">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="125.0" layoutY="350.0" prefHeight="45.0" prefWidth="300.0" promptText="Enter your password" styleClass="input-field" />

        <!-- Forgot Password -->
        <Hyperlink layoutX="125.0" layoutY="463.0" text="Did you forget your password?" />

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="125.0" layoutY="411.0" prefHeight="45.0" prefWidth="300.0" styleClass="login-btn" text="Login" />

        <!-- OR Label -->
        <Label layoutX="265.0" layoutY="500.0" styleClass="or-label" text="OR" />

        <!-- Register -->
        <Label layoutX="160.0" layoutY="530.0" styleClass="prompt" text="Don't have an account?" />
        <Button layoutX="320.0" layoutY="525.0" mnemonicParsing="false" styleClass="prompt-button" text="Register Here!" />
    </children>
</AnchorPane>
