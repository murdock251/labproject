<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" styleClass="main-background" stylesheets="@style3.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <VBox maxWidth="300.0" spacing="15.0">
            <children>

                <TextField fx:id="phoneField" promptText="Phone Number" styleClass="custom-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <PasswordField fx:id="passwordField" promptText="Password" styleClass="custom-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>

                <Button mnemonicParsing="false" prefWidth="300.0" styleClass="login-button" text="Login">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Don't have an account?" textFill="WHITE" />
                <Hyperlink styleClass="register-link" text="Register here!" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets bottom="50.0" left="20.0" right="20.0" top="50.0" />
    </padding>
</VBox>